<div style="border: 1px solid #C0C0C0; margin-bottom: 3px; background:#DFE8FF;"	onmouseover="javascript:document.getElementById('%id%').style.display='block';"	onmouseout="javascript:document.getElementById('%id%').style.display='none';">	<div class=log.head>		<div style="color:#6F747F; border-bottom: 1px solid #D6E0F5;">			<span style=float:right;>%time%</span>			<span>Benutzer : %name%</span>		</div>		<div style="padding: 3px;">%action%</div>	</div>	<div class=log.comment id=%id% style="display:none;background:#D4E5FF;margin:2px;border:1px solid #D6E0F5;">		<b>Anmerkung</b><br/>		<span>%comment%</span>	</div></div>