<label for="%id%">
	<div title="%name%" style="margin: 2px; float: left; width: 150px;">
		<input id="%id%" name=id[] type=checkbox value="%id%" style="float: left;">
		
		%name%
		<div style="text-align: center; height: 50px; width: 50px; padding: 1px; border: 1px solid #c0c0c0; background:#FFF;">
			<img src="%thumburl%">
		</div>
		<a href="%fullurl%" target="_blank">
			<span  style="color: #000; border: 1px solid #0c0c0c; background: #c0c0c0; padding:2px; font-size: 10px;">
				Ansicht
			</span>
		</a>
	</div>
</label>

